<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIY Platform</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <!-- AOS (Animate On Scroll) CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Tilt.js Library for 3D hover effects -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.min.js"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #00bcd4, #80deea);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        h1 {
            color: white;
            font-size: 4rem;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-top: 20px;
            text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.5);
        }

        /* Tombol dengan efek neon dan hover */
        .btn-custom {
            background-color: #ff6f61;
            color: white;
            padding: 12px 40px;
            border-radius: 50px;
            font-size: 1.2rem;
            transition: all 0.4s ease;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2), 0 0 10px #ff6f61;
        }

        .btn-custom:hover {
            background-color: #ff3b30;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3), 0 0 20px #ff3b30;
            transform: scale(1.05);
        }

        /* Efek hover interaktif pada tabel */
        .table-hover tbody tr:hover {
            background-color: #f1c40f;
            color: #fff;
            transition: all 0.3s ease;
            transform: scale(1.02);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

        /* Efek tilt pada elemen */
        [data-tilt] {
            transform-style: preserve-3d;
            transition: transform 0.2s ease-out;
        }

        /* Card Styling */
        .card-custom {
            background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            margin-top: 30px;
            transition: all 0.3s ease;
        }

        .card-custom:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
        }

        .container {
            margin-top: 100px;
        }

        /* Efek animasi saat elemen muncul saat scroll */
        [data-aos] {
            opacity: 0;
            transition-property: transform, opacity;
        }

        [data-aos][data-aos-animate] {
            opacity: 1;
            transform: translate(0, 0);
        }

        [data-aos="fade-up"] {
            transform: translateY(50px);
        }

        [data-aos="fade-up"][data-aos-animate] {
            transform: translateY(0);
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 3rem;
            }

            .btn-custom {
                padding: 10px 30px;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>

    <!-- Container utama -->
    <div class="container text-center" data-aos="fade-up">
        <h1>DIY Platform</h1>

        <!-- Card interaktif dengan efek hover -->
        <div class="card-custom" data-tilt data-aos="fade-right">
            <h2 class="text-white">Authors</h2>
            <p class="text-white">Explore our collection of authors.</p>
            <a href="/authors/detail" class="btn btn-custom" data-tilt>
                <i class="fas fa-info-circle"></i> Show Detail
            </a>
        </div>

        <!-- Tabel dengan efek hover dan interaktif -->
        <div class="table-responsive mt-5" data-aos="fade-up">
            <table class="table table-hover table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    <% authors.forEach(el => { %>
                    <tr>
                        <td><%= el.id %></td>
                        <td><%= el.fullName %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS Library (Animate on Scroll) -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1200 });
        VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
            max: 25,
            speed: 400
        });
    </script>
</body>
</html>
