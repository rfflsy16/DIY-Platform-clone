<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIY Platform</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center text-primary mb-4">DIY Platform</h1>

        <div class="d-flex justify-content-start mb-4">
            <a class="btn btn-success" href="/posts/add">Add Post</a>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Difficulty</th>
                    <th>Total Vote</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach(el => { %>
                <tr>
                    <td><%= el.title %></td>
                    <td><%= el.difficulty %></td>
                    <td><%= el.totalVote %></td>
                    <td>
                        <a href="/posts/<%= el.id %>" class="btn btn-info btn-sm">Read More</a>
                        <a href="/posts/<%= el.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/posts/<%= el.id %>/delete" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
